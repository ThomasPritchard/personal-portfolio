<div id="main-navbar">
  <nav class="flex text-white w-screen">
    <div class="px-5 xl:px-12 py-6 flex justify-between w-full items-center">
      <a class="text-xl font-bold font-heading" href="#">Thomas Pritchard</a>
      <!-- Header Icons -->
      <div class="hidden lg:flex items-center space-x-5 items-center">
        <a href="#" class="hover:text">My Blog</a>
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded">
          Contact Me
        </button>
      </div>
    </div>
    <!-- Responsive navbar -->
    <div class="flex lg:hidden navbar-burger self-center mr-12">
      <i class="fa-solid fa-bars transform-transition" id="burger"></i>
    </div>
  </nav>
  <div class="flex flex-col lg:hidden hidden items-center space-y-2 w-screen text-white" id="mobile-pane">
    <a href="#" class="hover:text">My Blog</a>
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded">
      Contact Me
    </button>
  </div> 
</div> 

<script>
  var burgerComponent = document.getElementById("burger");
  var rotationAngle = 0;

  if (!burgerComponent) {
    throw new Error("Burger component not found");
  }

  var toggled = false;
  var mobilePaneComponent = document.getElementById("mobile-pane");
  
  burgerComponent.addEventListener('click', () => {
    if (!mobilePaneComponent || !burgerComponent) {
      throw new Error("Mobile pane or burger icon not found");
    }
    
    toggled = !toggled;
    rotationAngle += rotationAngle === 90? -90 : 90;
    burgerComponent.style.transform = `rotate(${rotationAngle}deg)`;

    if (toggled) {
      mobilePaneComponent.classList.remove("hidden");
    } else {
      mobilePaneComponent.classList.add("hidden");
    }
  });
</script>