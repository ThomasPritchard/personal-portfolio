        <a class="hover:text-gray-200" href="#">Contact Me</a>
      </div>
    </div>     
  </section>
</div>

<script>
  var burgerComponent = document.getElementById("burger");
  var toggled = false;
  var rotationAngle = 0;

  if (!burgerComponent) {
    throw new Error();
  }
  
  burgerComponent.addEventListener('click', () => {
    var mobilePaneComponent = document.getElementById("mobile-pane");
    var burgerIcon = document.getElementById("burger");

    if (!mobilePaneComponent || !burgerIcon) {
      throw new Error();
    }

    toggled = !toggled;
    rotationAngle += 90;
    burgerIcon.style.transform = `rotate(${rotationAngle}deg)`;

    if (rotationAngle >= 180) {
      rotationAngle = 0;
    }

    if (toggled) {
      mobilePaneComponent.classList.remove("hidden");
    } else {
      mobilePaneComponent.classList.add("hidden");
    }
  });
</script>